This function is called only while dumping Spacemacs configuration. You can
`require' or `load' the libraries of your choice that will be included in the
dump."
  )


(defun dotspacemacs/user-config ()
  "Configuration for user code:
This function is called at the very end of Spacemacs startup, after layer
configuration.
Put your configuration code here, except for variables that should be set
before packages are loaded."

  ;; ---------------------------------------------------------------------------
  ;; Misc Configuration

  ;; (defun connor/title-prepare (title-format)
  ;;   (concat (spacemacs/title-prepare dotspacemacs-frame-title-format) " " (all-the-icons-icon-for-mode)))

  ;; This isn't needed now that I'm using Emacs plus, but I'll keep it around just in case
  ;; (setq frame-title-format '((:eval
  ;;                             (connor/title-prepare dotspacemacs-frame-title-format))))

  (setq mac-command-modifier 'meta)

  (setq auth-sources '("~/.authinfo") )

  ;; (when (memq window-system '(mac ns x))
  ;;   (exec-path-from-shell-initialize))

  (load-theme 'catppuccin :no-confirm)
  (setq catppuccin-flavor 'frappe)
  (catppuccin-reload)

  ;; (setq lsp-disabled-clients '(rubocop-ls))

  (when (string= system-type "darwin")
    (setq dired-use-ls-dired t
          insert-directory-program "/opt/homebrew/bin/gls"
          dired-listing-switches "-aBhl --group-directories-first"))

  ;; Allow C-h to trigger which-key before it is done automatically
  (setq which-key-show-early-on-C-h t)
  ;; make sure which-key doesn't show normally but refreshes quickly after it is
  ;; triggered.
  ;; (setq which-key-idle-delay 10000)
  ;; (setq which-key-idle-secondary-delay 0.05)
  ;; (which-key-mode)

  (setq frame-title-format nil)
  (setq ns-use-proxy-icon nil)

  ;; ---------------------------------------------------------------------------
  ;; Configuration for Org mode

  ;; Org Mode task states
  (with-eval-after-load 'org
    (setq org-todo-keywords
          '((sequence "TODO" "DOING" "WAITING" "UNDER REVIEW" "|" "DONE")))
    (setq org-capture-templates
          '(("t" "Tasks" entry
             (file+headline "" "Inbox")
             "* TODO %?\n %U")
            ("c" "Phone Call" entry
             (file+headline "" "Inbox")
             "* TODO Call %?\n %U")
            ("m" "Meeting" entry
             (file+headline "" "Meetings")
             "* %?\n %U")
            ("o" "On-Call" entry
             (file+headline "" "On-Call Log")
             "* %?\n %U")
            ("j" "Journal Entry" entry
             (file+datetree "journal.org")
             "* %U\n%?")))
    )

  ;; ---------------------------------------------------------------------------
  ;; Configuration for mu4e

  (setq mu4e-mu-binary (executable-find "mu"))

  ;; The directory in which our emails live
  (setq mu4e-maildir "~/.maildir")

  ;; this command is called to sync imap servers:
  (setq mu4e-get-mail-command (concat (executable-find "mbsync") " -a"))

  ;; how often to call it in seconds:
  (setq mu4e-update-interval 300)

  ;; save attachment to desktop by default
  ;; or another choice of yours:
  (setq mu4e-attachment-dir "~/Desktop")

  ;; rename files when moving - needed for mbsync:
  (setq mu4e-change-filenames-when-moving t)

  ;; Finally, a list of email addresses
  (setq mu4e-user-mail-address-list '( "connor.davenport@id.me" ))
  (add-to-list 'mu4e-bookmarks
               (make-mu4e-bookmark
                :name "Inbox - Gmail"
                :query "maildir:/gmail/INBOX"
                :key ?g))
  ;; Setup contexts when sending mail
  (setq mu4e-contexts
        '(,(make-mu4e-context
            :name "gmail"
            :enter-func
            (lambda () (mu4e-message "Enter connor.davenport@id.me context"))
            :leave-func
            (lambda () (mu4e-message "Leave connor.davenport@id.me context"))
            :match-func
            (lambda (msg)
              (when msg
                (mu4e-message-contact-field-matches msg
                                                    :to "connor.davenport@id.me")))
            :vars '((user-mail-address . "connor.davenport@id.me")
                    (user-full-name . "Connor Davenport")
                    (mu4e-drafts-folder . "/gmail/drafts")
                    (mu4e-refile-folder . "/gmail/archive")
                    (mu4e-sent-folder . "/gmail/sent")
                    (mu4e-trash-folder . "/gmail/trash")))
          ))

  (setq mu4e-context-policy 'pick-first) ;; start with the first (default) context;
  (setq mu4e-compose-context-policy 'ask) ;; ask for context if no context matches;

  ;; More settings for sending mail
  ;; don't keep message compose buffers around after sending:
  (setq message-kill-buffer-on-exit t)

  ;; send function:
  (setq send-mail-function 'message-send-mail-with-sendmail
        message-send-mail-function 'message-send-mail-with-sendmail)

  ;; send program:
  ;; this is exeranal. remember we installed it before.
  (setq sendmail-program (executable-find "msmtp"))

  ;; select the right sender email from the context.
  (setq message-sendmail-envelope-from 'header)

  ;; function to chose from account before sending mail
  (defun connor/set-msmtp-account ()
    (if (message-mail-p)
        (save-excursion
          (let*
              ((from (save-restriction
                       (message-narrow-to-headers)
                       (message-fetch-field "from")))
               (account
                (cond
                 ((string-match "connor.davenport@id.me" from) "gmail"))))
            (setq message-sendmail-extra-arguments (list '"-a" account))))))

  (add-hook 'message-send-mail-hook 'connor/set-msmtp-account)

  ;; mu4e cc & bcc
  (add-hook 'mu4e-compose-mode-hook
            (defun connor/add-cc-and-bcc ()
              "My Function to automatically add Cc & Bcc: headers.
    This is in the mu4e compose mode."
              (save-excursion (message-add-header "Cc:\n"))
              (save-excursion (message-add-header "Bcc:\n"))))

  ;; mu4e address completion
  (add-hook 'mu4e-compose-mode-hook 'company-mode)

  (setq user-mail-address "connor.davenport@id.me")


  ;; ---------------------------------------------------------------------------
  ;; Configuration for Slack

  ;; (slack-register-team
  ;;  :name "emacs-slack-idme"
  ;;  :token  ( auth-source-pick-first-password
  ;;            :host "myslackteam.slack.com"
  ;;            :user "connor.davenport@id.me")
  ;;  :cookie (  auth-source-pick-first-password
  ;;             :host "myslackteam.slack.com"
  ;;             :user "connor.davenport@id.me^cookie")
  ;;  ))
  )


